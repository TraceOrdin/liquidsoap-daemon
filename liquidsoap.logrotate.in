@log_dir@/*.log {
  su @USER@ @USER@
  compress
  rotate 5
  size 300k
  missingok
  notifempty
  sharedscripts
  postrotate
    for liq in @pid_dir@/*.pid ; do
      if test $liq != '@pid_dir@/*.pid' ; then
        start-stop-daemon --stop --signal USR1 --quiet --pidfile $liq
      fi
    done
  endscript
}
